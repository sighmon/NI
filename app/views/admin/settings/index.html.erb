<div class="page-header">
	<h1>App Settings</h1>
</div>
<p>Edit the settings one at a time and click save afterwards.</p>
<p><strong>Note</strong>: The Issue price is in cents. The Subscription price is per month (in cents).</p>
<div class="admin-settings">
<% @settings.each_pair do |name, value| %>

	<%= form_tag("#{admin_setting_path(name)}", :method => "put") do %>
	  <%= label_tag(:value, "#{name}") %>
	  <%= number_field_tag(:value, "#{value}") %>
	  <%= submit_tag("Save", :class => 'btn btn-primary') %>
	<% end %>

<% end %>
</div>

<div class="form-actions">
	<%= link_to 'Back', admin_root_path, :class => 'btn btn-default' %>
</div>