	          <%= truncate((simple_format remove_image_tags(source_to_body(article, :debug => current_user.try(:admin?)))), :escape => false, :length => 180) %>
	        <% else %>
	          <%= truncate((simple_format remove_image_tags(article.body)), :escape => false, :length => 180) %>
