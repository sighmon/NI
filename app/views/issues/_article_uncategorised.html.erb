        <div class="uncategorised">
          <% if user_signed_in? and can? :read, article %>
            <!-- Can read this article, so link to it -->
            <h5><%= link_to highlight(article.title, @query_array), issue_article_path(article.issue,article) %></h5>
            <p><%= simple_format article.teaser %></p>
            <p><%= link_to 'Read this article', issue_article_path(article.issue,article), :class => 'btn btn-outline-secondary' %> <%= link_to 'Edit', edit_issue_article_path(@issue,article), :class => 'btn btn-primary btn-xs' %> <%= link_to 'Destroy', issue_article_path(@issue,article), data: { confirm: 'Are you sure?'}, method: :delete, class: 'btn btn-xs btn-danger' %></p>
            <hr />
          <% end %>
        </div>
