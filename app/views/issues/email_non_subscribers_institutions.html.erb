                    <layout label="Text only">
                        <table class="w580" width="580" cellpadding="0" cellspacing="0" border="0">
                            <tbody><tr>
                                <td class="w580" width="580">
                                    <p align="center"><%= link_to image_tag(@issue.cover_url(:thumb2x).to_s, :alt => "Read New Internationalist magazine '#{@issue.title}' on-line.", :title => "Read New Internationalist magazine '#{@issue.title}' on-line.", :size => "141x200", :class => 'magazine-cover'), issue_url(@issue) %></p>
                                    <p align="center">
                                        <%= link_to image_tag("iphone@2x.png", :alt => "Read New Internationalist magazine '#{@issue.title}' on your iPad or iPhone.", :title => "Read New Internationalist magazine '#{@issue.title}' on your iPad or iPhone.", :size => "14x24", :class => 'ios-icon-cover'), app_link(issue_url(@issue)) %>
