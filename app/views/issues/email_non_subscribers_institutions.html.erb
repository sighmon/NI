                                <td class="w580" width="580">
                                    <p align="left" class="section-title">Keynote article</p>
                                    <% if not @issue.keynote.featured_image.blank? %>
                                      <table cellpadding="0" cellspacing="0" border="0" align="right">
                                          <tbody><tr>
                                              <td class="w30" width="15"></td>
                                              <td><%= link_to image_tag(@issue.keynote.featured_image_url(:thumb2x).to_s, :alt => "Read '#{@issue.keynote.title}' on-line.", :title => "Read '#{@issue.keynote.title}' on-line.", :width => "100", :class => 'w100', :border => '0', :label => 'Image'), issue_article_url(@issue,@issue.keynote) %></td>
                                          </tr>
                                          <tr><td class="w30" width="15" height="5"></td><td></td></tr>
                                      </tbody></table>
                                    <% elsif not @issue.keynote.first_image.nil? %>
                                      <table cellpadding="0" cellspacing="0" border="0" align="right">
                                          <tbody><tr>
                                              <td class="w30" width="15"></td>
                                              <td><%= link_to image_tag(@issue.keynote.first_image.data_url(:thumb2x).to_s, :alt => "Read '#{@issue.keynote.title}' on-line.", :title => "Read '#{@issue.keynote.title}' on-line.", :width => "100", :class => 'w100', :border => '0', :label => 'Image'), issue_article_url(@issue,@issue.keynote) %></td>
                                          </tr>
                                          <tr><td class="w30" width="15" height="5"></td><td></td></tr>
                                      </tbody></table>
