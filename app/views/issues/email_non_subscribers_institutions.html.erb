                                    <% @issue.categorised_articles.each do |a| %>
                                      <% if not a.first_image.nil? and a.is_a_feature and not a.teaser.blank? %>
                                      <table cellpadding="0" cellspacing="0" border="0" align="right">
                                          <tbody><tr>
                                              <td class="w30" width="15"></td>
                                              <td><%= link_to image_tag(a.first_image.data_url(:thumb2x).to_s, :alt => "Read '#{a.title}' on-line.", :title => "Read '#{a.title}' on-line.", :width => "50", :class => 'w50', :border => '0', :label => 'Image'), issue_article_url(@issue,a) %></td>
                                          </tr>
                                          <tr><td class="w30" width="15" height="5"></td><td></td></tr>
                                      </tbody></table>
                                      <% end %>
                                      <p align="left" class="article-content feature-title">
