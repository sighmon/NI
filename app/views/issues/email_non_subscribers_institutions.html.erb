                                        <multiline label="Description"><%= simple_format @issue.keynote.teaser %> <%= link_to image_tag("iphone@2x.png", :alt => "Read '#{@issue.keynote.title}' on your iPad or iPhone.", :title => "Read '#{@issue.keynote.title}' on your iPad or iPhone.", :size => "14x24", :class => 'ios-icon'), app_link(issue_article_url(@issue,@issue.keynote)) %> <%= link_to "Open in our iOS or Android app", app_link(issue_article_url(@issue,@issue.keynote)) %> | <%= link_to "Read it on-line", issue_article_url(@issue,@issue.keynote) %></multiline>
                                    </div>
                                </td>
                            </tr>
                            <tr><td class="w580" width="580" height="10"></td></tr>
                        </tbody></table>
                    </layout>

                    <hr />

                    <layout label="Text with right-aligned image">
